

<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    
     
     <input type="text" name="firstname" placeholder="First name">
  
  <tbody>
    <% @people.each do |person| %>
    <form name="myForm" action="#" onsubmit="return validateForm()" method="post">
      <tr>
        <td><input type="text" name="firstname" placeholder="first name"><%= person.first_name %></td>
        <td><input type="text" name="lastname" placeholder="Last name"><%= person.last_name %></td>
        <td><input type="text" name="email" placeholder="email"><%= person.email %></td>
        <td><%= person.date_of_birth %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

